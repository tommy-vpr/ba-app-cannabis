generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  email     String          @unique
  password  String
  firstName String
  lastName  String
  role      String          @default("user")
  state     String?
  bookmarks SavedCompany[] @relation("UserBookmarks")
}

model SavedCompany {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  companyId String   // HubSpot company ID
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], name: "UserBookmarks")

  @@unique([userId, companyId])
}

model Bookmark {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  userId        String   // your NextAuth user id (string for Mongo)
  companyId     String   // HubSpot company ID (e.g. "1234567890")
  companyName   String   // snapshot for quick rendering
  companyCity   String?
  companyState  String?
  companyZip    String?
  companyStatus String?
  createdAt     DateTime @default(now())

  @@unique([userId, companyId]) // 1 bookmark per user/company
}